# Production Environment Configuration Template
# Copy this file to .env.production and fill in the values

# Database Configuration
DATABASE_URL=postgres:postgres@localhost:5432/graphql-microservices
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password

# JWT Configuration (RS256)
# Generate keys with:
# openssl genrsa -out jwt_access_private.pem 2048
# openssl rsa -in jwt_access_private.pem -pubout -out jwt_access_public.pem
# openssl genrsa -out jwt_refresh_private.pem 2048
# openssl rsa -in jwt_refresh_private.pem -pubout -out jwt_refresh_public.pem
# Then paste the contents here (use quotes and \n for line breaks)
JWT_ACCESS_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_ACCESS_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----"
JWT_ACCESS_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_ACCESS_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
JWT_REFRESH_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_REFRESH_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----"
JWT_REFRESH_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_REFRESH_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://app.your-domain.com

# Security Settings
INTROSPECTION_ENABLED=false
RATE_LIMIT_ENABLED=true

# Query Complexity Limits
QUERY_MAX_COMPLEXITY=2000
QUERY_MAX_DEPTH=15

# Gateway Configuration
GATEWAY_PORT=4000
POLLING_INTERVAL=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=100

# Docker Registry
REGISTRY=your-registry.com
VERSION=latest

# OpenTelemetry Configuration (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
