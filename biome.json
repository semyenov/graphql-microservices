{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.js",
      "**/*.ts",
      "**/*.json",
      "!**/dist/**",
      "!**/generated/**",
      "!**/node_modules/**",
      "!**/.turbo/**",
      "!**/coverage/**",
      "!**/*.min.js",
      "!introspection.json",
      "!client/src/graphql-env.d.ts"
    ]
  },
  "vcs": {
    "useIgnoreFile": true
  }
}
