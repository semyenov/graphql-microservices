# Environment Configuration
NODE_ENV=development

# Service Ports
GATEWAY_PORT=4000
USERS_PORT=4001
PRODUCTS_PORT=4002
ORDERS_PORT=4003

# Database URLs (PostgreSQL)
USERS_DATABASE_URL=postgresql://postgres:password@localhost:5432/users_db
PRODUCTS_DATABASE_URL=postgresql://postgres:password@localhost:5432/products_db
ORDERS_DATABASE_URL=postgresql://postgres:password@localhost:5432/orders_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# RSA Key Pairs for JWT (RS256)
# Generate these keys using:
# openssl genrsa -out jwt-access-private.pem 2048
# openssl rsa -in jwt-access-private.pem -pubout -out jwt-access-public.pem
# openssl genrsa -out jwt-refresh-private.pem 2048
# openssl rsa -in jwt-refresh-private.pem -pubout -out jwt-refresh-public.pem
# Then copy the contents (including BEGIN/END lines) and escape newlines with \n

JWT_ACCESS_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----"
JWT_ACCESS_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
JWT_REFRESH_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_REFRESH_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----"
JWT_REFRESH_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_REFRESH_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Gateway Configuration
INTROSPECTION_ENABLED=true
PLAYGROUND_ENABLED=true

# Service Discovery (optional - services are auto-discovered)
# SUBGRAPH_URLS=http://localhost:4001/graphql,http://localhost:4002/graphql,http://localhost:4003/graphql

# Logging
LOG_LEVEL=info