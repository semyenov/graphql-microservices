{
  "name": "graphql-microservices",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "services/*",
    "shared/*",
    "client"
  ],
  "scripts": {
    "setup": "bun run scripts/setup-db.ts",
    "seed": "bun run scripts/seed.ts",
    "dev": "bun run scripts/dev.ts",
    "dev:gateway": "cd services/gateway && bun run dev",
    "dev:users": "cd services/users && bun run dev",
    "dev:products": "cd services/products && bun run dev",
    "dev:orders": "cd services/orders && bun run dev",
    "build": "bun run scripts/build.ts",
    "test": "bun test",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "typecheck": "bunx tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "schema:introspect": "bun run scripts/introspect-schema.ts",
    "schema:export": "bun run scripts/export-schema.ts",
    "docs:generate": "bun run scripts/generate-docs.ts",
    "schema:update": "bun run scripts/update-schemas.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@prisma/client": "^6.13.0",
    "@types/bun": "^1.2.19",
    "prisma": "^6.13.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "dataloader": "^2.2.3",
    "gql.tada": "^1.8.12",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "rate-limiter-flexible": "^7.2.0",
    "zod": "^4.0.14"
  }
}
